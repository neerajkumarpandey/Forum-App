<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ctc="http://schemas.android.com/apk/res/com.joel.forum"
    android:id="@+id/map_relative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/map_screen_bg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imgBtnLanuage_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/languages01" />

        <ImageButton
            android:id="@+id/imgBtnVideo_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgBtnLanuage_map"
            android:layout_below="@+id/imgBtnLanuage_map"
            android:layout_marginTop="20dp"
            android:background="@drawable/videos01" />

        <ImageButton
            android:id="@+id/imgBtnAudio_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgBtnVideo_map"
            android:layout_below="@+id/imgBtnVideo_map"
            android:layout_marginTop="21dp"
            android:background="@drawable/audios01" />

        <ImageButton
            android:id="@+id/imgBtnMap_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgBtnAudio_map"
            android:layout_below="@+id/imgBtnAudio_map"
            android:layout_marginTop="22dp"
            android:background="@drawable/maps02" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:gravity="center"
            android:text="@string/en_language"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:gravity="center"
            android:text="@string/en_audio"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/en_video"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgBtnMap_map"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/en_map"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_audio"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" >

        <com.joel.forum.ImageMap

            android:id="@+id/mapen"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            ctc:fitImageToScreen="true"
            ctc:map="mapen"
            ctc:maxSizeFactor="2.5"
            ctc:scaleFromOriginal="true"

             />

       <com.joel.forum.ImageMap
            android:id="@+id/map_it"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            ctc:fitImageToScreen="true"
            ctc:map="mapit"
            ctc:maxSizeFactor="2.5"
            ctc:scaleFromOriginal="true" />

        <com.joel.forum.ImageMap
            android:id="@+id/map_es"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            ctc:fitImageToScreen="true"

            ctc:map="mapes"
            ctc:maxSizeFactor="2.5"
            ctc:scaleFromOriginal="true" />

        <com.joel.forum.ImageMap
            android:id="@+id/map_fr"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            ctc:fitImageToScreen="true"
            ctc:map="mapfr"
            ctc:maxSizeFactor="2.5"
            ctc:scaleFromOriginal="true" />

        <com.joel.forum.ImageMap
            android:id="@+id/map_de"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            ctc:fitImageToScreen="true"
            ctc:map="mapde"
            ctc:maxSizeFactor="2.5"
            ctc:scaleFromOriginal="true" />

        <com.joel.forum.ImageMap
            android:id="@+id/map_ru"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            ctc:fitImageToScreen="true"
            ctc:map="mapru"
            ctc:maxSizeFactor="2.5"
            ctc:scaleFromOriginal="true" />

        <com.joel.forum.ImageMap
            android:id="@+id/map_pt"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            ctc:fitImageToScreen="true"
            ctc:map="mappt"
            ctc:maxSizeFactor="2.5"
            ctc:scaleFromOriginal="true" />



        <Button
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/info_red" />

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="22dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/btn_info"
            android:text="INTERACTIVE MAP"
            android:textColor="#000000" />

